# =========================
# SPA / フロントコントローラ
# =========================
<IfModule mod_rewrite.c>
  RewriteEngine On

  # 既存ファイル・ディレクトリがある場合はそのまま
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # それ以外は index.html
  RewriteRule . /index.html [L]
</IfModule>
