# =========================
# 非公開ストレージ（最重要）
# =========================
# storage 配下への直接アクセスをすべて拒否
<IfModule mod_authz_core.c>
  <Directory "storage">
    Require all denied
  </Directory>
</IfModule>

# Apache 2.2 互換（念のため）
<IfModule !mod_authz_core.c>
  <Directory "storage">
    Order allow,deny
    Deny from all
  </Directory>
</IfModule>

# =========================
# SPA / フロントコントローラ
# =========================
<IfModule mod_rewrite.c>
  RewriteEngine On

  # 既存ファイル・ディレクトリがある場合はそのまま
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # それ以外は index.html にフォールバック
  RewriteRule . /index.html [L]
</IfModule>
